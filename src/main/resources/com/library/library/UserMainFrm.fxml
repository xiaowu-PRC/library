<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="550.0" prefWidth="809.0" xmlns="http://javafx.com/javafx/18"
            fx:controller="com.library.library.UserMainFrm">
    <children>
        <MenuBar prefHeight="25.0" prefWidth="809.0">
            <menus>
                <Menu mnemonicParsing="false" text="账户">
                    <items>
                        <MenuItem fx:id="exit" mnemonicParsing="false" onAction="#exit" text="退出登录"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="关于本系统">
                    <items>
                        <MenuItem fx:id="about" mnemonicParsing="false" onAction="#about" text="版权信息©"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Label layoutX="200.0" layoutY="57.0" text="欢迎光临homo图书馆">
            <font>
                <Font name="Microsoft YaHei Bold" size="41.0"/>
            </font>
        </Label>
        <Label fx:id="currentUser" layoutX="327.0" layoutY="122.0" prefHeight="27.0" prefWidth="156.0">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Button fx:id="borrowBook" layoutX="315.0" layoutY="184.0" mnemonicParsing="false" onAction="#borrowBook"
                prefHeight="66.0" prefWidth="180.0" text="借书"/>
        <Button fx:id="query" layoutX="315.0" layoutY="422.0" mnemonicParsing="false" onAction="#query"
